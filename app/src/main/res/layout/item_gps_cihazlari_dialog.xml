<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="230dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/gps_cihazlari_item_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:src="@drawable/ic_bluetooth"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/gps_cihazlari_item_image"
        android:layout_toLeftOf="@+id/gps_cihazlari_item_connected"
        >
        <TextView
            android:id="@+id/gps_cihazlari_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#EFEFEF"/>
        <TextView
            android:id="@+id/gps_cihazlari_item_baglandi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:text="bağlandı"
            android:textSize="13sp"
            android:textColor="#0090FF"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/gps_cihazlari_item_connected"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:visibility="invisible"
        android:src="@drawable/ic_bluetooth_connected" />

</RelativeLayout>