<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:padding="8dp"
    android:background="@drawable/background_custom_notlar_window">

    <TextView
        android:id="@+id/yerimleri_item_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/yerimleri_item_del_imageview"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#EFEFEF"/>

    <ImageView
        android:id="@+id/yerimleri_item_del_imageview"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/yerimleri_item_imageview"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_delete_forever"/>

    <ImageView
        android:id="@+id/yerimleri_item_imageview"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_arrow_forward_32"/>
</RelativeLayout>