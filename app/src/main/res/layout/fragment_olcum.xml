<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.OlcumFragment">


    <TextView
        android:id="@+id/olcum_frag_info_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:clickable="true"
        android:visibility="invisible"
        android:maxWidth="200dp"
        android:textSize="16sp"
        android:textColor="#fff"
        android:background="@drawable/background_custom_info_window"
        android:padding="10dp"
        android:layout_above="@+id/olcum_bottom_relative"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:clickable="true"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/olcum_bottom_relative">

        <ImageView
            android:id="@+id/olcum_frag_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:focusable="true"
            android:clickable="true"
            android:src="@drawable/sol_ok"/>

        <ImageView
            android:id="@+id/olcum_frag_forward"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:focusable="true"
            android:clickable="true"
            android:src="@drawable/sag_ok"
            android:layout_marginLeft="32dp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/olcum_bottom_relative"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/background_small_layout"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="25.7dp"
            android:layout_centerInParent="true"
            android:weightSum="4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/olcum_frag_uzunluk"
                android:layout_width="80dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/background_selectable_textview"
                android:text="Uzunluk"
                android:textColor="#fff"
                android:textSize="16sp"
                android:clickable="true"/>
            <TextView
                android:id="@+id/olcum_frag_alan"
                android:layout_width="80dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/background_selectable_textview"
                android:text="Alan"
                android:textColor="#fff"
                android:textSize="16sp"
                android:layout_marginLeft="16dp"
                android:clickable="true"
                />
            <TextView
                android:id="@+id/olcum_frag_koordinat"
                android:layout_width="80dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/background_selectable_textview"
                android:text="Koordinat"
                android:textColor="#fff"
                android:textSize="16sp"
                android:layout_marginLeft="16dp"
                android:clickable="true"
                />
            <ImageButton
                android:id="@+id/olcum_frag_cancel_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Ä°ptal"
                android:background="#1A2129"
                android:src="@drawable/close"
                android:layout_marginLeft="18dp"
                />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>