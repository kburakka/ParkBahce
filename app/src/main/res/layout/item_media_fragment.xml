<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/media_item_relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="#3A4858">

    <com.example.msi.demoo.utils.TouchImageView
        android:id="@+id/media_item_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:layout_marginBottom="10dp"
        android:foregroundGravity="fill|center"
        android:layout_above="@+id/media_item_attach_knowedge_parent_rel"/>



    <RelativeLayout
        android:id="@+id/media_item_attach_knowedge_parent_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/media_item_holder"
            android:layout_width="72dp"
            android:layout_height="22dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/pano_holder"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="19dp"
            android:background="#1A2129"/>

        <RelativeLayout
            android:id="@+id/media_item_attachment_knowledge_rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1A2129"
            android:layout_below="@+id/media_item_holder">

            <TextView
                android:id="@+id/media_item_attachment_knowledge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#EFEFEF"
                />

        </RelativeLayout>

    </RelativeLayout>



    <ImageView
        android:id="@+id/media_item_imageview_type"
        android:layout_width="20dp"
        android:layout_height="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        />


</RelativeLayout>