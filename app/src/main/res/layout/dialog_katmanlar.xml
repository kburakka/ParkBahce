<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".dialogfragments.KatmanlarDialog">

    <RelativeLayout
        android:layout_width="312dp"
        android:layout_height="424dp">

        <LinearLayout
            android:id="@+id/first_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical"
            android:background="@drawable/background_dialog_fragment">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dialog_katmanlar_icon"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center"
                    android:src="@drawable/katmanlar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/dialog_katmanlar_icon"
                    android:layout_marginStart="17dp"
                    android:textSize="16sp"
                    android:text="Katmanlar"
                    android:textStyle="bold"
                    android:textColor="#EFEFEF"/>

                <Switch
                    android:id="@+id/dialog_katmanlar_open_close_all_layer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:theme="@style/MySwitch"
                    />

            </RelativeLayout>

            <ExpandableListView
                android:id="@+id/dialog_katmanlar_expandable_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:groupIndicator="@null"
                android:padding="8dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/dialog_katmanlar_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/close_circle" />

    </RelativeLayout>

</RelativeLayout>

